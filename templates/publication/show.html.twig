{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idpublication</th>
                <td>{{ publication.idpublication }}</td>
            </tr>
            <tr>
                <th>Object</th>
                <td>{{ publication.object }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publication.description }}</td>
            </tr>
            <tr>
                <th>Archive</th>
                <td>{{ publication.archive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Idclient</th>
                <td>{{ publication.idclient }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ publication.date ? publication.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_publication_index') }}">back to list</a>

    <a href="{{ path('app_publication_edit', {'idpublication': publication.idpublication}) }}">edit</a>

    {{ include('publication/_delete_form.html.twig') }}
{% endblock %}
